headers = GLFW/glfw3.h GLFW/glfw3native.h
headerFilter = GLFW/*
package = platform.glfw

compilerOpts.osx = -I/usr/include -I/usr/local/include
linkerOpts.osx = -L/usr/lib -L/usr/local/lib -lglfw

compilerOpts.linux = -I/usr/include -I/usr/local/include
linkerOpts.linux = -L/usr/lib/x86_64-linux-gnu -lglfw

staticLibraries.mingw = libglfw3.a glfw3.dll
libraryPaths.mingw = ./lib/glfw-3.3.8.bin.WIN64/lib-mingw-w64
compilerOpts.mingw = -I ./lib/glfw-3.3.8.bin.WIN64/include
linkerOpts.mingw = -L ./lib/glfw-3.3.8.bin.WIN64/lib-mingw-w64 -lgdi32 -lopengl32 -lglfw3
